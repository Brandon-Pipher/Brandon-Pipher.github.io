name: Import Jupyter Notebooks as Blog Posts

on:
  push:
    branches: [main]
    paths:
      - 'notebooks/*.ipynb'
  workflow_dispatch:

permissions:
  contents: write
  pull-requests: write

jobs:
  convert-notebooks:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.10'

      - name: Install Jupyter tools
        run: |
          pip install jupyter nbconvert

      - name: Convert notebooks to Hugo page bundles
        run: |
          mkdir -p content/post
          for file in notebooks/*.ipynb; do
            filename=$(basename "$file" .ipynb)
            output_dir="content/post/$filename"
            mkdir -p "$output_dir"
            jupyter nbconvert --to markdown "$file" --output "$filename" --output-dir "$output_dir"
            mv "$output_dir/$filename.md" "$output_dir/index.md"
          done

      - name: Commit and push changes
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"
          git add content/post/
          git commit -m "Auto-import notebooks as blog posts" || echo "No changes to commit"
          git push